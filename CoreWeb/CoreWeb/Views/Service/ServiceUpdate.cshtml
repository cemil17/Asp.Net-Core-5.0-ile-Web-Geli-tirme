@model EntityLayer.Concrete.Service

@{
	ViewData["Title"] = "ServiceUpdate";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<div class="col-lg-12">
	<a href="/Service/Index/">
		<div>
			<i class="ni ni-bold-left"></i>
			<span>Geri Dön</span>
		</div>
	</a>
</div>
<div class="card-header bg-transparent border-0 ">
	<h3 class="text-dark mb-0">İlgi Alanını Güncelle</h3>
</div>



@using (Html.BeginForm("ServiceUpdate", "Service", FormMethod.Post))
{

	<div class="col-lg-7 col-md-10">
		<form class="form-group" method="post">
			@Html.HiddenFor(x=>x.ServiceID)

			<label for="example-text-input" class="form-control-label">İlgi Alanı</label>
			@Html.TextBoxFor(c => c.Title, new { @class="form-control" })
			@Html.ValidationMessageFor(c=>c.Title)
			<br />

			<label for="example-text-input" class="form-control-label">Görsel (URL)</label>
			@Html.TextBoxFor(c => c.ImageURl, new { @class="form-control" })
			@Html.ValidationMessageFor(c=>c.ImageURl)
			<br />

			<button class="btn btn-info">Güncelle</button>
			<br />
			<br />

		</form>
	</div>
}

