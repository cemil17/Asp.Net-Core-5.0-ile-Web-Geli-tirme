@using EntityLayer.Concrete
@model List<WriterUser>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-md-6">
	<div class="p-2">
		<button class="btn btn-outline-warning" id="getListAll" type="button">Veri Getir</button>
		<button class="btn btn-outline-info" id="btnAddUser" type="button">Kaydet</button>
	</div>
</div>

<h3 class="text-center">Yazar Listesi</h3>
<div class="p-2" id="listUser">
	veriler burada listelenecek
</div>

<br />
<div class="col-md-12">
	<input type="text" id="name" placeholder="Ad" class="form-control"/>
	<br	>
	<input type="text" id="surname" placeholder="Soyad" class="form-control"/>
	<br>
	<input type="text" id="username" placeholder="Kullanıcı Ad" class="form-control" />
	<br>
	<input type="text" id="mail" placeholder="Mail" class="form-control" />
</div>

@section Scripts
	{
	<script>
		$("#getListAll").click(function () {
			$.ajax({
				contentType: "application/json",
				dataType: "json",
				type: "Get",
				url: "/WriterUser/UserList/",

				success: function (func) {
					let users = jQuery.parseJSON(func);
					console.log(users);
				}
			});
		});

	</script>
}

@await Html.PartialAsync("/Views/Admin/PartialScripts.cshtml")