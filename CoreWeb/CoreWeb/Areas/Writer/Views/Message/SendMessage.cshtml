@model EntityLayer.Concrete.MessageSwitchingSystem

@{
	ViewData["Title"] = "SendMessage";
	Layout = "~/Views/Shared/_WriterLayout.cshtml";
}




<div class="col-md-6 grid-margin stretch-card">
	<div class="card">
		<div class="card-body">
			<h4 class="card-title">
				Mesaj Gönderme
			</h4>

			<form class="forms-sample" method="post">
				<div class="form-group">
					<label for="exampleInputUsername1">Alıcı Mail</label>
					@Html.TextBoxFor(x=>x.Receiver, new{ @class="form-control"})
				</div>
				<div class="form-group">
					<label for="exampleInputUsername1">Konu</label>
					@Html.TextBoxFor(x=>x.Subject, new{ @class="form-control"})
				</div>
				<div class="form-group">
					<label for="exampleInputUsername1">Mesaj</label>
					@Html.TextAreaFor(x=>x.Message,7,2, new{ @class="form-control"})
				</div>

				<button class="btn btn-warning">Gönder</button>
			</form>
		</div>
	</div>
</div>
