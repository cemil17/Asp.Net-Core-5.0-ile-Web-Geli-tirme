@using EntityLayer.Concrete
@model List<DefaultField>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="row">
	<div class="col">
		<div class="card bg-default shadow">
			<div class="card-header bg-transparent border-0 ">
				<h3 class="text-white mb-0">Motivasyon </h3>
				<div class="col-lg-12 col-5 text-right">
					<button class="btn btn-secondary" data-toggle="modal" data-target="#Modal1">Motivasyon Ekle</button>
				</div>
			</div>
			<div class="table-responsive">
				<table class="table align-items-center table-dark table-flush">
					<thead class="thead-dark">
						<tr>
							<th scope="col" class="sort" data-sort="name">#</th>
							<th scope="col" class="sort" data-sort="budget">Kim Söylemiş?</th>
							<th scope="col" class="sort" data-sort="status">Motivasyon</th>
							<th scope="col">İşlemler</th>
							<th scope="col"></th>
						</tr>
					</thead>
					@foreach (var item in Model)
					{
						<tbody class="list">
							<tr>
								<th>@item.ID</th>
								<th scope="row">
									<div class="media align-items-center">
										<a href="#" class="avatar rounded-circle mr-3">
											<img alt="Image placeholder" src="~/Template/images/testimonials/pic-5.png">
										</a>
										<div class="media-body">
											<span class="name mb-0 text-sm">@item.Subtitle</span>
										</div>
									</div>
								</th>
								<td>
									@item.Description.Substring(0, item.Description.Substring(0, 50).LastIndexOf(" "))...
								</td>
								<td class="text">
									<div class="dropdown" data-toggle="tooltip" data-placement="top" title="İşlemler">
										<a class="btn btn-outline-warning text-secondary" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
											<i class="ni ni-send"></i>
										</a>
										<div class="dropdown-menu dropdown-menu-right dropdown-menu-arrow text-center">
											<a class="btn btn-danger" href="/DefaultField/DeleteRow/@item.ID">Sil</a>
											<a class="btn btn-info" href="/DefaultField/EditMotivation/@item.ID">Güncelle</a>
										</div>
									</div>
								</td>
							</tr>
						</tbody>
					}
				</table>
			</div>
		</div>
	</div>
</div>




@*AddModal*@
<div class="modal" id="Modal1">
	<div class="modal-dialog" tabindex="-1">
		<div class="modal-content">
			<div class="header card-header bg-transparent pb-5" ">
				<div class="text-muted text-center mt-2 mb-3">
					<b>	Yeni Yazı Ekle</b>
					<a class="close text-danger" href="/DefaultField/Index/">&times;</a>
				</div>
			</div>
			<div class="modal-body">
				<form method="post" action="/DefaultField/AddMotivation/">
					<input type="text" placeholder="Kim Söylemiş?" name="Subtitle" class="form-control" />
					<br />
					<textarea rows="7" cols="2" type="text" placeholder="Motivasyon" name="Description" class="form-control"></textarea>
					<br />
					<div class="modal-footer">
						<button class="btn btn-warning"> Kaydet</button>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
