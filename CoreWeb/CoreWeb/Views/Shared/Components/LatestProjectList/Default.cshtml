@using EntityLayer.Concrete
@model List<Portfolio>


@{
	string color = "";
}
@{
	string durum = "";
}


<div class="col-md-4 grid-margin stretch-card">
	<div class="card">
		<div class="card-body">
			<p class="card-title mb-0">Son Projelerim</p>
			<a href="/Portfolio/Index/"><small>Tüm projeler</small></a>
			<div class="table-responsive">
				<table class="table table-striped table-borderless">
					<thead>
						<tr>
							<th>Proje</th>
@*							<th>Görseli</th>
*@							<th>Durumu</th>
						</tr>
					</thead>
					@foreach (var item in Model)
					{
						if (item.Status == true)
						{
							durum = "Aktif";
							color = "badge badge-success";
						}
						else
						{
							durum = "Pasif";
							color = "badge badge-danger";
						}

						<tbody>
							<tr>
								<td><a href="/Portfolio/PortfolioUpdate/@item.PortfolioID">@item.Name</a></td>
								@*<td>
									<img src="@item.ImageURL">
								</td>*@
								<td><div class="@color">@durum</div></td>
							</tr>
						</tbody>
					}
				</table>
			</div>
		</div>
	</div>
</div>